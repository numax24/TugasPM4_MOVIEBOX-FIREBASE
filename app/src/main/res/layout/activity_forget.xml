<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/movback"
    tools:context=".Forget">


    <ImageView
        android:id="@+id/imgMovie"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/iconmovie" />

    <EditText
        android:id="@+id/forgetEmail"
        android:layout_below="@+id/imgMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner"
        android:padding="11dp"
        android:ems="10"
        android:fontFamily="@font/ubunturegular"
        android:inputType="textPersonName"
        android:hint="Email" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgetEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn1"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/ubuntumedium"
        android:textStyle="bold"
        android:text="SEND RESET LINK" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnReset"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="25dp"
        android:text="Back to"
        android:textColor="#000000"
        android:fontFamily="@font/rotulonahand"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnReset"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/rotulonahand"
        android:text="Login" />

</RelativeLayout>